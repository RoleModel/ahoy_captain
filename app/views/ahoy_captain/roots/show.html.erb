<main class='bg-base-300 min-h-screen'>
  <div class="grid grid-cols-1 lg:grid-cols-2 grid-flow-row gap-4 max-w-6xl mx-auto">
    <div class="flex container p-4 col-span-1 lg:col-span-2">
      <%= link_to "utm medium", campaigns_path(type: :utm_medium) %><br/>
      <%= link_to "cities", cities_path %>
      <%= link_to "countries", countries_path %>
      <%= link_to "regions", regions_path %>
      <%= link_to "browsers", devices_browsers_path %>
      <%= link_to "exit_pages", exit_pages_path %>
      <%= link_to "entry_pages", entry_pages_path %>
      <%= link_to "funnels_path", funnels_path %>
      <%= link_to "goals_path", goals_path %>
      <%= link_to "realtimes_path", realtime_path %>
      <%= link_to "sources_path", sources_path %>
      <%= link_to "top_pages_path", top_pages_path %>
    </div>

    <%= render ::AhoyCaptain::TileComponent.new(title: 'Top Sources') do |component| %>
      <% component.with_display_links do %>
      <% end %>
      <% component.with_statistic_display do %>
        <%= turbo_frame_tag :sources, src: sources_path(search_params) %>
      <% end %>
      <% component.with_details_cta do %>
      <% end %>
    <% end %>

    <%= render ::AhoyCaptain::TileComponent.new(title: 'Top Pages') do |component| %>
      <% component.with_display_links do %>
        <a href="<%= top_pages_path(search_params) %>" data-turbo-frame="pages" class="link link-primary">Top Pages</a>
        <a href="<%= entry_pages_path(search_params) %>" data-turbo-frame="pages" class="link link-primary">Entry Pages</a>
        <a href="<%= exit_pages_path(search_params) %>" data-turbo-frame="pages" class="link link-primary">Exit Pages</a>
      <% end %>
      <% component.with_statistic_display do %>
        <%= turbo_frame_tag :pages, src: top_pages_path(search_params) %>
      <% end %>
      <% component.with_details_cta do %>
      <% end %>
    <% end %>

    <%= render ::AhoyCaptain::TileComponent.new(title: 'Countries') do |component| %>
      <% component.with_display_links do %>
        <a href="<%= countries_path(search_params) %>" data-turbo-frame="geography" class="link link-primary">Countries</a>
        <a href="<%= regions_path(search_params) %>" data-turbo-frame="geography" class="link link-primary">Regions</a>
        <a href="<%= cities_path(search_params) %>" data-turbo-frame="geography" class="link link-primary">Cities</a>
      <% end %>
      <% component.with_statistic_display do %>
        <%= turbo_frame_tag :geography, src: countries_path(search_params) %>
      <% end %>
      <% component.with_details_cta do %>
      <% end %>
    <% end %>

    <%= render ::AhoyCaptain::TileComponent.new(title: 'Devices') do |component| %>
      <% component.with_display_links do %>
        <a href="<%= devices_browsers_path(search_params) %>" data-turbo-frame="devices" class="link link-primary">Browser</a>
        <a href="<%= devices_operating_systems_path(search_params) %>" data-turbo-frame="devices" class="link link-primary">OS</a>
        <a href="<%= devices_device_types_path(search_params) %>" data-turbo-frame="devices" class="link link-primary">Size</a>
      <% end %>
      <% component.with_statistic_display do %>
        <%= turbo_frame_tag :devices, src: devices_browsers_path(search_params) %>
      <% end %>
      <% component.with_details_cta do %>
      <% end %>
    <% end %>
  </div>
</main>